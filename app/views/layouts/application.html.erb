<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <title>Labase Food</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    
    <!-- Quill.js CDN -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/choices.js@10.2.0/public/assets/styles/choices.min.css" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/choices.js@10.2.0/public/assets/scripts/choices.min.js", defer: true %>
    
  </head>

  <body class="h-full bg-white text-black font-mono">
    <div class="min-h-full">
      <nav class="border-b-4 border-black">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex items-center">
              <%= link_to "LABASE FOOD", root_path, class: "text-2xl font-bold tracking-wider" %>
            </div>
            
            <!-- Menu desktop caché sur mobile -->
            <div class="hidden sm:flex items-center space-x-4">
              <%= link_to "RECETTES", recipes_path, class: "uppercase hover:underline" %>
              
              <% if user_signed_in? %>
                <%= link_to "CRÉER RECETTE", new_recipe_path, class: "uppercase hover:underline" %>
                <%= link_to "MES RECETTES", recipes_path(my_recipes: true), class: "uppercase hover:underline" %>
                <%= link_to "REPAS", meals_path, class: "uppercase hover:underline" %>
                <%= link_to "INVITÉS", guests_path, class: "uppercase hover:underline" %>

                <% if user_signed_in? && current_user.admin? %>
                  <div class="relative group">
                    <button class="uppercase hover:underline px-2 py-1">ADMIN</button>
                    <div class="absolute right-0 top-full w-48 bg-white border-2 border-black opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                      <%= link_to "INGRÉDIENTS", admin_ingredient_dictionaries_path, 
                                  class: "block px-4 py-2 uppercase hover:bg-black hover:text-white border-b border-gray-200 last:border-b-0" %>
                      <%= link_to "SOUMISSIONS", admin_ingredient_submissions_path, 
                                  class: "block px-4 py-2 uppercase hover:bg-black hover:text-white" %>
                    </div>
                  </div>
                <% end %>
                
                <%= link_to current_user.username.upcase, user_path(current_user), class: "uppercase hover:underline" %>
                <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "uppercase hover:underline" %>
              <% else %>
                <%= link_to "Se connecter", new_user_session_path, class: "uppercase hover:underline" %>
                <%= link_to "S'inscrire", new_user_registration_path, class: "uppercase hover:underline" %>
              <% end %>
            </div>
            
            <!-- Burger visible sur mobile seulement -->
            <button onclick="toggleMenu()" class="sm:hidden border-2 border-black px-3 py-2">
              ☰
            </button>
          </div>
        </div>
        
        <!-- Menu mobile -->
        <div id="mobile-menu" style="display: none;" class="sm:hidden px-4 pb-4">
          <%= link_to "RECETTES", recipes_path, class: "block py-2 uppercase" %>
          <% if user_signed_in? %>
            <%= link_to "CRÉER RECETTE", new_recipe_path, class: "block py-2 uppercase" %>
            <%= link_to "MES RECETTES", recipes_path(my_recipes: true), class: "block py-2 uppercase" %>
            <%= link_to "REPAS", meals_path, class: "block py-2 uppercase" %>
            <%= link_to "INVITÉS", guests_path, class: "block py-2 uppercase" %>
            <% if current_user.admin? %>
              <%= link_to "INGRÉDIENTS", admin_ingredient_dictionaries_path, class: "block py-2 uppercase" %>
              <%= link_to "SOUMISSIONS", admin_ingredient_submissions_path, class: "block py-2 uppercase" %>
            <% end %>
            <%= link_to current_user.username.upcase, user_path(current_user), class: "block py-2 uppercase" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "block py-2 uppercase" %>
          <% else %>
            <%= link_to "Se connecter", new_user_session_path, class: "block py-2 uppercase" %>
            <%= link_to "S'inscrire", new_user_registration_path, class: "block py-2 uppercase" %>
          <% end %>
        </div>
      </nav>

      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <% if notice.present? %>
          <div class="border-2 border-black p-4 mb-4 bg-green-100">
            <p class="uppercase"><%= notice %></p>
          </div>
        <% end %>
        
        <% if alert.present? %>
          <div class="border-2 border-black p-4 mb-4 bg-red-100">
            <p class="uppercase"><%= alert %></p>
          </div>
        <% end %>
        
        <%= yield %>
      </main>
    </div>
    
    <script>
      function toggleMenu() {
        var menu = document.getElementById('mobile-menu');
        if (menu.style.display === 'none') {
          menu.style.display = 'block';
        } else {
          menu.style.display = 'none';
        }
      }
    </script>
  </body>
</html>